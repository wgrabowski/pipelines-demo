pipeline {
  agent any
  stages {
    stage('setup') {
      steps {
        sh 'npm ci'
      }
    }

    stage('check affected') {
      parallel {
        stage('lint:ts') {
          steps {
            sh 'nx affected --target=lint --base=CHANGE_TARGET --head=CHANGE_BRANCH'
          }
        }

        stage('lint:styles') {
          steps {
            sh 'nx affected --target=stylelint --base=CHANGE_TARGET --head=CHANGE_BRANCH'
          }
        }

        stage('npm audit') {
          steps {
            sh 'npm audit'
          }
        }

      }
    }

    stage('test affected') {
      steps {
        sh 'nx affected --target=test --base=CHANGE_TARGET --head=CHANGE_BRANCH'
      }
    }

    stage('build affected') {
      steps {
        sh 'nx affected --target=build --base=CHANGE_TARGET --head=CHANGE_BRANCH'
      }
    }

  }
  environment {
    ENV = 'production'
  }
}